        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Name="MainPage"
        Title="Bluetooth"
         
        
        
        
        
        
        
        
        BackgroundColor="{DynamicResource PageBackgroundColor}">
        <ContentPage.Content>
           
               <VerticalStackLayout>
                
                <Button  Margin="25" Text="clike me" BackgroundColor="DarkRed"  Clicked="OnMenuItemClicked"/>
                
            </VerticalStackLayout>
          
        </ContentPage.Content>
