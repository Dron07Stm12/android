            <!-- Обёртка с фиксированной высотой и вертикальной прокруткой -->
            <ScrollView Orientation="Vertical" HeightRequest="80">
                <CollectionView x:Name="DevicesList"
                SelectionMode="None" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="DarkRed"
                    StrokeShape="RoundRectangle 10"
                    Margin="5"
                    Padding="5"
                    StrokeThickness="2"   >
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference DevicesList}, Path=BindingContext.DeviceTappedCommand}" 
                                          CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>

                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Stroke" Value="Green" />
                                <Setter Property="StrokeThickness" Value="3" />
                            </DataTrigger>
                        </Border.Triggers>

                      
                                <VerticalStackLayout>
                            <Label FontSize="14" TextColor="Black" Text="{Binding DisplayName}" />

                            <!-- ✅ Обновлённый Label со стилем и триггерами -->
                            <Label FontSize="14"
                           FontAttributes="Bold"
                           Text="{Binding DisplayStatus}">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding DisplayStatus}" Value="Подключено">
                                        <Setter Property="TextColor" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding DisplayStatus}" Value="Не подключено">
                                        <Setter Property="TextColor" Value="Gray" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>
                     
                        </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

